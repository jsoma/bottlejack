
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
      
    <!-- Your CSS files -->
    <link rel="stylesheet" href="{{#if relativePrefix}}{{relativePrefix}}/{{/if}}style/default.css">
    
    <!-- google fonts: Roboto Condensed(super-font) and Lora(sub-font) -->
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700" rel="stylesheet"> 
  
    <title>{{headline}}</title>
  </head>
    
  <style>
    {{#if css}}
      {{css}}
    {{/if}}

    body {
      {{#if text_color}}
        color: {{ text_color }} !important;
      {{/if}}
      {{#if bg_color}}
        background: {{ bg_color }} !important;
      {{/if}}
    }
  </style>
  <body class="{{#if theme}}{{ theme }}{{else}}beige{{/if}}-theme">
    <div class="container"><!-- start of the main container-->
        <div class="row justify-content-center"><!-- headline and intro -->
            <div class="col-lg-10 ">
                <p><a href="..">&#8592; back to homepage</a></p>
                {{#if kicker}}
                    <p class="kicker super-font">{{kicker}}</p>
                {{/if}}
                {{#if headline}}
                    <h1 class="headline super-font">{{headline}}</h1>
                {{/if}}
                {{#if author}}
                    <p class="credit super-font">By {{author}}</p>
                {{/if}}
                {{#if publish_date}}
                    <p class="date sub-font">Published {{publish_date}}</p>
                {{/if}}
                {{#if intro}}
                  <p class="intro">{{ intro }}</p>
                {{/if}}
                {{#if processed_content}}
                    <div class="sub-font body-text">
                        {{{processed_content}}}
                    </div>
                {{/if}}
                </p>
            </div>
        </div>
        
      </div><!-- end of the main container-->
   
      
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
  </body>
</html>